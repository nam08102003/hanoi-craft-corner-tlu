<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_artisan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_placeholder_default" />

        <TextView
            android:id="@+id/text_artisan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_artisan"
            android:text="Nguyễn Thị Lan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_artisan_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_artisan_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/image_artisan"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="+ Gốm Bát Tràng\n+ 35 năm sống với nghề..."
            android:textColor="@color/secondary" />

        <Button
            android:id="@+id/btn_go_to_store"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/text_artisan_intro"
            android:layout_alignEnd="@id/text_artisan_intro"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/btnColorPurple"
            android:text="Gian hàng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView> 