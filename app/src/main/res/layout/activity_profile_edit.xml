<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8A5BF1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingBottom="24dp"
        tools:ignore="MissingConstraints"> <!-- Padding at the bottom of the purple area -->

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/image_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:tint="@android:color/white"
        android:contentDescription="Back"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Edit Profile Title -->
    <TextView
        android:id="@+id/text_edit_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/image_back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/image_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img"
    app:civ_border_width="3dp"
    app:civ_border_color="#FFFFFF"
    app:layout_constraintTop_toBottomOf="@id/text_edit_profile_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"/>

    <!-- Add Photo Text -->
    <TextView
        android:id="@+id/text_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm ảnh mới"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/image_profile"
        app:layout_constraintStart_toStartOf="@id/image_profile"
        app:layout_constraintEnd_toEndOf="@id/image_profile"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Form Section -->
<ScrollView
android:id="@+id/scroll_view_form"
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintTop_toBottomOf="@id/top_section_container"
app:layout_constraintBottom_toTopOf="@+id/button_update"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:paddingHorizontal="24dp"
android:clipToPadding="false"
android:paddingBottom="16dp"> <!-- Padding for scroll content at bottom -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Tên đăng nhập -->
    <TextView
        android:id="@+id/label_ten_dang_nhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/edittext_ten_dang_nhap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:text="NGUYỄN THỤC QUYÊN"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="textPersonName"
        android:layout_marginTop="6dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:text="quyenthuc@gmail.com"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="textEmailAddress"
        android:layout_marginTop="6dp"/>

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/label_so_dien_thoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_so_dien_thoai"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:hint=""
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="phone"
        android:layout_marginTop="6dp"/>

    <!-- Ngày sinh -->
    <TextView
        android:id="@+id/label_ngay_sinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_ngay_sinh"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:hint=""
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="date"
        android:layout_marginTop="6dp"/>

    <!-- CCCD/CMND -->
    <TextView
        android:id="@+id/label_cccd_cmnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CCCD/CMND"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_cccd_cmnd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:hint=""
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="number"
        android:layout_marginTop="6dp"/>

    <!-- Giới tính -->
    <TextView
        android:id="@+id/label_gioi_tinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_gioi_tinh"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:hint=""
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="text"
        android:layout_marginTop="6dp"/>

    <!-- Địa chỉ -->
    <TextView
        android:id="@+id/label_dia_chi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edittext_dia_chi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_background_rounded"
        android:hint=""
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:inputType="textPostalAddress"
        android:layout_marginTop="6dp"/>

</LinearLayout>
</ScrollView>

    <!-- Cập nhật Button -->
<Button
android:id="@+id/button_update"
android:layout_width="0dp"
android:layout_height="56dp"
android:text="Cập nhật"
android:background="@drawable/button_background_rounded_black"
android:textColor="@android:color/white"
android:textSize="18sp"
android:textAllCaps="false"
android:textStyle="bold"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginHorizontal="24dp"
android:layout_marginBottom="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>